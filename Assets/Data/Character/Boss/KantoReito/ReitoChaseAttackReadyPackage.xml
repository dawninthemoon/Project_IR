<AIPackage Name="ReitoChaseAttackReadyPackage" DefaultState="AI_ChasePunchReady">

    <AIState>
        <AI_ChasePunchReady UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>    
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_ChasePunchReady"/>
            </Event_OnExecute>
            
            <Event_OnUpdate>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnUpdate>

            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_ChasePunchReady>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>

    </AIState>

</AIPackage>