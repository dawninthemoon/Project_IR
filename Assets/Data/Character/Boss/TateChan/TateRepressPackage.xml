<AIPackage Name="TateRepressPackage" DefaultState="AI_GuardForward">

    <AIState>
        <AI_GuardForward UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="10.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_GuardForward"/>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnExecute>

            <Event_OnFrame>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnFrame>

            <Branch Condition="DefenceSuccess" Execute="AI_GuardSuccess"/>
        </AI_GuardForward>

        <AI_GuardSuccess UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="10.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_GuardSuccess"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_GuardSuccess>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>
    </AIState>

</AIPackage>