<AIPackage Name="TateDefensePackage" DefaultState="AI_GuardBack">

    <AIState>
        <AI_GuardBack UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="10.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_GuardBack"/>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnExecute>

            <Event_OnFrame>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnFrame>
        
            <Branch Condition="DefenceSuccess" Execute="AI_GuardSuccess"/>
        </AI_GuardBack>

        <AI_GuardSuccess UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="10.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_GuardSuccess"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="AI_GuardBack"/>
        </AI_GuardSuccess>

    </AIState>
</AIPackage>