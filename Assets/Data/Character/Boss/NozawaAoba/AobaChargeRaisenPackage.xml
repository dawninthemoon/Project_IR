<AIPackage Name="AobaChargeRaisenPackage" DefaultState="AI_Charge">

    <AIState>
        <AI_Charge UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_ChargeRaisenReady"/>
            </Event_OnExecute>

            <Event_OnFrame>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnFrame>
            
            <Branch Condition="End" Execute="AI_ChargeRaisenPre"/>
        </AI_Charge>

        <AI_ChargeRaisenPre UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_ChargeRaisenPre"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="AI_ChargeRaisenSlash"/>          
        </AI_ChargeRaisenPre>

        <AI_ChargeRaisenSlash UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_ChargeRaisenSlash"/>
            </Event_OnExecute>

            <Branch Condition="AttackSuccess" Execute="AI_ChargeRaisenSuccess"/>
            <Branch Condition="End" Execute="TerminatePackage"/>          
        </AI_ChargeRaisenSlash>

        <AI_ChargeRaisenSuccess UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_ChargeRaisenSuccess"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="TerminatePackage"/>    
        </AI_ChargeRaisenSuccess>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>

    </AIState>

</AIPackage>