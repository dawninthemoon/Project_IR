<AIPackage Name="AobaStormRaisenPackage" DefaultState="AI_StormPreToUp">

    <AIState>
        <AI_StormEntry UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Branch Weight="RandBoolean^True" Condition="true" Execute="AI_StormPreToUp"/>
            <Branch Weight="RandBoolean^False" Condition="true" Execute="AI_StormPreToDown"/>
        </AI_StormEntry>

        <AI_StormPreToUp UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_StormPre"/>
            </Event_OnExecute>
        
            <Branch Condition="End" Execute="AI_StormUp"/>
        </AI_StormPreToUp>

        <AI_StormPreToDown UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_StormPre"/>
            </Event_OnExecute>
        
            <Branch Condition="End" Execute="AI_StormDown"/>
        </AI_StormPreToDown>

        <!-- StormRaisen Charge -->
        <AI_StormUp UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget" Angle="45"/>
                <AIEvent Type="SetAction" Action="AC_Storm"/>
            </Event_OnExecute>
            
            <Branch Condition="End && (customValue_CurrentStormCount < 3.0)" Execute="AI_StormPreToDown"/>
            <Branch Condition="End" Execute="AI_StormPost"/>
        </AI_StormUp>

        <AI_StormDown UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget" Angle="-45"/>
                <AIEvent Type="SetAction" Action="AC_Storm"/>
            </Event_OnExecute>
            
            <Branch Condition="End && (customValue_CurrentStormCount < 3.0)" Execute="AI_StormPreToUp"/>
            <Branch Condition="End" Execute="AI_StormPost"/>
        </AI_StormDown>

        <AI_StormPost UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_StormPost"/>
            </Event_OnExecute>

            <Event_OnFrame>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnFrame>
        
            <Branch Condition="End" Execute="AI_StormRaisenPre"/>
        </AI_StormPost>

        <!-- StormRaisenPre -->
        <AI_StormRaisenPre UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_StormRaisenPre"/>
                <AIEvent Type="CallAIEvent" EventName="ResetStorm" TargetType="Self"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="AI_StormRaisenSlash"/>          
        </AI_StormRaisenPre>

        <!-- StormRaisenSlash -->
        <AI_StormRaisenSlash UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_StormRaisenSlash"/>
            </Event_OnExecute>

            <Branch Condition="AttackSuccess" Execute="AI_StormRaisenSuccess"/>
            <Branch Condition="End" Execute="TerminatePackage"/>          
        </AI_StormRaisenSlash>

        <!-- StormRaisenSuccess -->
        <AI_StormRaisenSuccess UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_StormRaisenSuccess"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="TerminatePackage"/>    
        </AI_StormRaisenSuccess>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>

    </AIState>

</AIPackage>