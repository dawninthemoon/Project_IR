<AIPackage Name="NajimiPitchingPackage" DefaultState="AI_PitcherReady">

    <AIState>
        <AI_PitcherReady UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_PitcherReady"/>
            </Event_OnExecute>

            <Event_OnFrame>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnFrame>

            <Branch Condition="End" Execute="AI_Pitch"/>
        </AI_PitcherReady>

        <AI_Pitch UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_Pitch"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="TerminatePackage"/>            
        </AI_Pitch>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>

    </AIState>

</AIPackage>