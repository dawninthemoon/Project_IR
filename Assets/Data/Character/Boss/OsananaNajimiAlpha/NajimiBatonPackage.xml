<AIPackage Name="NajimiBatonPackage" DefaultState="AI_BatonReady">

    <AIState>
        <AI_BatonReady UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="Test" Log="AI Baton Entry"/>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_BatonReady"/>
            </Event_OnExecute>

            <Event_OnUpdate>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnUpdate>
            
            <Branch Condition="End" Execute="AI_BatonPre"/>
        </AI_BatonReady>

        <AI_BatonPre UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_BatonPre"/>
            </Event_OnExecute>        
            
            <Branch Condition="End" Execute="AI_BatonSlash"/>
        </AI_BatonPre>

        <AI_BatonSlash UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_BatonSlash"/>
            </Event_OnExecute>
            
            <Branch Condition="AttackSuccess" Execute="AI_BatonSuccess"/>
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_BatonSlash>

        <AI_BatonSuccess UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_BatonSuccess"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="TerminatePackage"/>    
        </AI_BatonSuccess>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>

    </AIState>

</AIPackage>