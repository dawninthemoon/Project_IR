<AIPackage Name="NajimiFireworkPackage" DefaultState="AI_PistolReady">

    <AIState>
        <AI_PistolReady UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="Test" Log="AI Firework Ready Entry"/>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_FireworkReady"/>
            </Event_OnExecute>
            
            <Event_OnUpdate>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnUpdate>
            
            <Branch Condition="End" Execute="AI_FireworkShot"/>
        </AI_PistolReady>

        <AI_FireworkShot UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_FireworkShot"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="TerminatePackage"/>          
        </AI_FireworkShot>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>

    </AIState>

</AIPackage>